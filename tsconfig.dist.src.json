{
	"compilerOptions": {
		// Config
		"module": "commonjs",
		"target": "ESNext",
		// Emit
		"noEmit": true,
		"noEmitHelpers": true,
		// Type Checking
		"alwaysStrict": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"useDefineForClassFields": true,
	},
	"exclude": ["**/node_modules/"],
	"include": ["**/*.ts"],
}
