{
	"compilerOptions": {
		// Config
		"moduleResolution": "node",
		"skipLibCheck": false,
        "module": "commonjs",
        "target": "ESNext",
		// Emit
		"noEmit": true,
		"declaration": true,
		// Type Checking
		"strict": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedParameters": false,
	},
	"include": ["./src/**/*.ts"],
}
